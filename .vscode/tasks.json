{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build server (Windows)",
			"type": "shell",
			"command": "gcc",
			"args": [
				"-o",
				"server\\server_win.exe",
				"server\\server_win.c",
				"-lws2_32"
			],
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Run server 5001 (Windows)",
			"type": "shell",
			"command": "server\\server_win.exe",
			"args": [
				"5001"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "none"
		},
		{
			"label": "UI: npm install (ui_electron)",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-Command",
				"cd ui_electron; npm install"
			],
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "UI: start Electron",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-Command",
				"cd ui_electron; npm start"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "none"
		}
	]
}